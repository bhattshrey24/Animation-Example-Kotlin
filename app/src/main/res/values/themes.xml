<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AnimationExampleKotlin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- This enables the transitions since by default I guess its not enabled -->
        <item name="android:windowActivityTransitions">true</item>
        <!--setting entering transition ie. animation that will play when activity enter-->
        <item name="android:windowEnterTransition">@transition/activity_trans_anim</item>
        <!--setting entering transition ie. animation that will play when activity exits-->
        <item name="android:windowExitTransition">@transition/activity_trans_anim</item>
    </style>
</resources>