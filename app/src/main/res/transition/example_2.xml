<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:transitionOrdering="sequential">
    <changeBounds
        android:duration="500"
        android:interpolator="@android:interpolator/linear"></changeBounds>

    <fade
        android:duration="250"
        android:fadingMode="fade_in_out"
        android:startDelay="400">
        <targets>
            <target android:targetId="@+id/txvTitle" />
        </targets>
    </fade>
</transitionSet><!--<targets> in these target tags I can define on which views I want this animation to take place-->
    <!--startDelay will basically delay the transition from happening for specified time ie. 400 miliseconds here-->